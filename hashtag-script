#!/bin/sh

hashtags() {

chosenLanguage=$(printf "hebrew\nenglish" | dmenu -p "Enter here the language you want to choose for your hashtags: ")
[ "$chosenLanguage" == "english" ] && hashtagsList=( "#success" "#successful" "#successquotes" "#successmindset" "#successtips" "#successfulwomen" "#successquote" "#successcoach" "#keytosuccess" "#weightlosssuccess" "#successstory" "#successtip" "#successo" "#successminded" "#businesssuccess" "#successdriven" "#etsysuccess" "#ivfsuccess" "#successfulstoner" "#successfulmindset" "#mlmsuccess" "#dressforsuccess" "#hersuccess" "#successmore" "#roadtosuccess" "#slimmingworldsuccess" "#successmotivation" "#successhabits" "#successfulquotes" "#successcircleng" "#successdiaries" "#successfull" "#sayyestosuccess" "#successfulpeople" "#lawofsuccess" "#successsecrets" "#successstories" "#successprinciples" "#besuccessful" "#successclub" "#motivation" "#fitnessmotivation" "#motivationalquotes" "#gymmotivation" "#mondaymotivation" "#workoutmotivation" "#motivational" "#motivationmonday" "#bodybuildingmotivation" "#weightlossmotivation" "#morningmotivation" "#runningmotivation" "#dailymotivation" "#motivationalspeaker" "#tuesdaymotivation" "#motivationalquote" "#fitmotivation" "#slimmingworldmotivation" "#motivationalmonday" "#studymotivation" "#motivationquotes" "#sportmotivation" "#motivations" "#thursdaymotivation" "#selfmotivation" "#wednesdaymotivation" "#exercisemotivation" "#powerliftingmotivation" "#motivationquote" "#entrepreneurmotivation" "#mymotivation" "#fridaymotivation" "#yogamotivation" "#sundaymotivation" "#motivationdaily" "#motivationoftheday" "#motivationalwords" "#instamotivation" "#motivation101" "#motivationalpost" "#business" "#smallbusiness" "#supportsmallbusiness" "#businesswoman" "#womeninbusiness" "#businessowner" "#businessman" "#localbusiness" "#onlinebusiness" "#smallbusinessowner" "#blackownedbusiness" "#blackbusiness" "#shopsmallbusiness" "#businesscoach" "#businesstrip" "#businesswomen" "#supportlocalbusiness" "#familybusiness" "#supportblackbusiness" "#businesstips" "#businesslife" "#businessowners" "#businessopportunity" "#businesscards" "#smallbusinesssaturday" "#businessquotes" "#supportsmallbusinesses" "#businessminded" "#newbusiness" "#homebusiness" "#savvybusinessowner" "#homebasedbusiness" "#businesscasual" "#businesspassion" "#businesscard" "#businessmen" "#businessclass" "#businessgrowth" "#startupbusiness" "#lagosbusines" )
[ "$chosenLanguage" == "hebrew" ] && hashtagsList=( "#爪" "#砖专" "#" "#住祝" "#" "#专转" "#" "#驻专爪转转" "#砖转" "#转" "#专住" "#aristo" "#转" "#爪" "#" "#转" "#注爪" "#" "#" "#注爪" "#专注" "#" "#砖驻" "#砖" "#爪砖专" "#砖专" "#" "#砖专" "#拽" "#拽住拽" "#砖" "#砖专" "#住驻专" "#专转" "#转驻转转砖转" "#转" "#" "#注住拽" "#住祝" "#" "#爪砖专" "#专砖专" "#砖驻" "#砖" "#" "#专砖拽" "#拽专住驻" "#驻住" "#专专" "#砖专驻" "#转" "#爪转" "#砖专" "#专住" "#tonyrobbins" "#拽专_" "#" "#转专24" "#爪" "#爪转" "#砖专_爪_注爪" "#爪注住拽" "#砖专" "#motivation" "#砖驻" "#砖专" "#注住拽" "#砖专" "#爪" "#转" "#住驻专" "#砖" "#" "#" "#专转" "#砖" "#注爪" "#专砖转" "#砖驻" "#砖专_转" "#转爪专转" "#" "#爪注住拽转" "#" "#砖驻爪" "#" "#注住拽" "#砖拽" "#砖" "#砖驻驻" "#砖专转" "#砖")
hashtagsMaker() {
for (( i=1; i<=30; i++ ))
do
	randomHashtags=${hashtagsList[$(shuf -i 0-116 -n 1)]}
	echo $randomHashtags | uniq | tr '\n' ' '
done
}
[ "$chosenLanguage" == "english" ] && (echo -e "Don't forget to follow: @your.success.path \nDon't forget to follow: @your.success.path \nDon't forget to follow: @your.success.path \n" && hashtagsMaker)
[ "$chosenLanguage" == "hebrew" ] && (echo -e "注拽 : @success.road.il\n注拽 : @success.road.il\n注拽 : @success.road.il\n" && hashtagsMaker)
# notify-send "Your hashtags are copied"

}

hashtags | xclip -sel c && notify-send "Your hashtags are copied now"
